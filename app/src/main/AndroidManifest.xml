<?xml version="1.0" encoding="utf-8"?>
<manifest
package="com.miv_sher.crimecat"
xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

<application
    android:allowBackup="true"
    android:icon="@drawable/pawprint"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".activity.SignInActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
    </activity>
    <activity android:name=".activity.NewCrimeActivity">
    </activity>
    <activity android:name=".activity.EditCrimeActivity">
    </activity>
    <activity android:name=".activity.CrimeActivity">
    </activity>
    <activity
        android:name=".activity.CrimePagerActivity"
        android:parentActivityName=".activity.CrimeListActivity">
    </activity>
    <activity
        android:name=".activity.MainActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar" >

    </activity>

</application>

</manifest>
